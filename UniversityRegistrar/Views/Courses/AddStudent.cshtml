@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Course;

<h2>Add a student</h2>

<h4>Register a student to this course: @Html.DisplayFor(model => model.CourseNumber)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.CourseId)

  @Html.Label("Select student")
  @Html.DropDownList("StudentId")

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to courses list", "Index")</p>