@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Student

<h2>Add an course</h2>

<h4>Add an course to this student's schedule: @Html.DisplayFor(model => model.StudentName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.StudentId)

    @Html.Label("Select course")
    @Html.DropDownList("CourseId")

    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to student list", "Index")</p>