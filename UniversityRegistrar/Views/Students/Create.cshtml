@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Student;

<h1>Add a new student</h1>

<p>@Html.ValidationMessageFor(model => model.StudentName, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>
<p>@Html.ValidationMessageFor(model => model.EnrollmentDate, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.StudentName)
    @Html.TextBoxFor(model => model.StudentName)

    @Html.LabelFor(model => model.EnrollmentDate)
    @Html.TextBoxFor(model => model.EnrollmentDate, new { @type="date"})

    @Html.LabelFor(model => model.Department)
    @Html.DropDownList("DepartmentId")

    <input type="submit" value="Add new student" class="btn btn-primary" />
}
<p>@Html.ActionLink("Show all students", "Index")</p> 